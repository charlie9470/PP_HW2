CC = gcc
CXX = g++
LDLIBS = -lpng
CFLAGS = -lm -O3
hw2a: CFLAGS += -pthread
hw2b: CC = mpicc
hw2b: CXX = mpicxx
hw2b: CFLAGS += -fopenmp
CXXFLAGS = $(CFLAGS)
outname = TTBesBTT
TARGETS = hw2seq hw2a hw2b
long_testcase = srun -n3 -c5 -N2 ./hw2b out/$(outname).png 10000 -0.3070888275226523 -0.2476068190345367 -0.6245844142332467 -0.6535851592208638 7680 4320

.PHONY: all
all: $(TARGETS)

